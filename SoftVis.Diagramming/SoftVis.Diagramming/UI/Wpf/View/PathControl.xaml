<UserControl x:Class="Codartis.SoftVis.UI.Wpf.View.PathControl"
             x:Name="ThisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Path Fill="{Binding ElementName=ThisControl, Path=Background}"
          Stroke="{Binding ElementName=ThisControl, Path=Foreground}"
          StrokeThickness="{Binding ElementName=ThisControl, Path=StrokeThickness}"
          Stretch="{Binding ElementName=ThisControl, Path=Stretch}" 
          Data="{Binding ElementName=ThisControl, Path=Data}" />

</UserControl>
